{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ title }}{% endblock %}

{% block body %}
    {{ parent() }}

    <a href="{{ path('app_frontend_categories') }}"><h2>{{ title }}</h2></a>

    <ul>
        {% for category in categories %}
            <a style="display: block" href="{{ path('app_frontend_categories', {categoryId: category.id}) }}">{{ category.name }}</a>
        {% endfor %}
    </ul>

    {% if category %}
        <h3>{{ category.name }}</h3>

        <div class="product-list">
            <ul>
                {% for product in products %}
                    <a href="{{ path('app_frontend_detailed', {productId: product.id}) }}">{{ product.name }}</a>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endblock %}