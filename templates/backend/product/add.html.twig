{% extends 'backend/backend/board.html.twig' %}
{% block title %}{{ parent() }} | {{ title }}{% endblock %}

{% block body %}
    {{ parent() }}
    {% block backend_list %}{% endblock %}

    <h2>Product Creation</h2>
    <form class="product-creation" action="{{ path('app_backend_product_create') }}" method="post">
        <div class="product-name">
            <label for="name">Produktname</label>
            <input type="text" id="name" name="name" placeholder="name" />
        </div>
        <div class="product-size">
            <label for="size">Produktgrößen</label>
            <input type="text" id="size" name="size" placeholder="size" />
        </div>
        <div class="product-color">
            <label for="color">Produktfarbe</label>
            <input type="text" id="color" name="color" placeholder="color" />
        </div>
        <div class="product-category">
            <label for="category">Produktkategorie</label>
            <select type="text" id="category" name="category">
                {% for category in categories %}
                    <option value="{{ category.id }}">{{ category.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="product-price">
            <label for="price">Produktpreis</label>
            <input type="text" id="price" name="price" placeholder="price" />
        </div>
        <div class="product-stock">
            <label for="stock">Produktvorrat</label>
            <input type="text" id="stock" name="stock" placeholder="stock" />
        </div>
        <button type="submit">Hinzuf&uuml;gen</button>
    </form>
{% endblock %}